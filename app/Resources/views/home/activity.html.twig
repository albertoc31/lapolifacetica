{# Pagina Index #}
{% extends 'base.html.twig' %}

{# TITULO #}
{% block title %}La Polifacética - Actividad{% endblock %}

{# BODY #}
{% block body %}
<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">Nuestras Actividades</h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-6">
            <a href="{{ asset(activityImg ~ activity.foto) }}" data-toggle="lightbox" class="link-lightbox">
            <img class="img-fluid" src="{{ asset(activityImg ~ activity.foto)  | imagine_filter('my_big_photo') }}" alt="">
                <img class="open-lightbox" src="{{ asset('img/icon_ampliar.png') }}" alt="">
            </a>
        </div>

        <div class="col-md-6">
            <h3 class="my-3">{{ activity.activityName | capitalize}}</h3>
            {{ activity.description | raw }}
            <h3 class="my-3">¿Cuando?</h3>
            <ul>
                <li><strong>Desde: </strong>{{ activity.desde }}</li>
                <li><strong>Hasta: </strong>{{ activity.hasta }}</li>
            </ul>
            <h3 class="my-3">Asociaciones</h3>
            <ul>
                {% for asociacion in activity.asociaciones %}
                <li>{{ asociacion.name }}</li>
                {% endfor %}
            </ul>
        </div>

    </div>
