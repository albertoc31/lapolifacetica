{% endblock %}

{# CSS #}
{% block stylesheets %}
    <link href="{{ asset('css/ekko-lightbox.css') }}" rel="stylesheet">
{% endblock %}

{# JS #}
{% block javascripts %}
    <script src="{{ asset('js/ekko-lightbox.js') }}" ></script>
    <script>
        $(document).on('click', '[data-toggle="lightbox"]', function(event) {
            event.preventDefault();
            $(this).ekkoLightbox();
        });
    </script>
