{# Pagina Index #}
{% extends 'base.html.twig' %}

{# TITULO #}
{% block title %}La Polifacética - Programa endblock %}

{# BODY #}
{% block body %}
<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">Programa del día {{ programa.fecha}}</h1>

    <!-- Portfolio Item Row -->

    <div class="row">

        <div class="col-md-6">
            <img class="img-fluid" src="{{ asset(activityImg ~ programa.foto) }}" alt="">
        </div>

        <div class="col-md-6">
            <h3 class="my-3">{{ programa.name }}</h3>
            {{ programa.description | raw }}
            <strong><a href="http://{{ programa.url}}" target="_blank">{{ programa.url}}</a></strong>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->

{% endblock %}

{# CSS #}
{% block stylesheets %}
    {#<style>
        body { background: #F5F5F5; font: 18px/1.5 sans-serif; }
    </style>#}
{% endblock %}




