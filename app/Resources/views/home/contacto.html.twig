{# Pagina Nueva Categoria #}
{% extends 'base.html.twig' %}

{# Usamos un theme para los formularios #}
{% form_theme form 'form/base_form.html.twig' %}

{# TITULO #}
{% block title %}Formulario de contacto{% endblock %}

{# BODY #}
{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-3">Contacta con nosotr@s</h1>

        <div class="row">
            <div class="col-md-8">
                {% if message %}
                    <div class="form-error">{{ message }}</div>
                {% endif %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>

    </div>

{% endblock %}