{# Pagina Index #}
{% extends 'base.html.twig' %}

{# Usamos un theme para los formularios #}
{% form_theme form 'form/base_form.html.twig' %}

{# TITULO #}
{% block title %}La Polifacética Registro{% endblock %}

{# BODY #}
{% block body %}
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <h1 class="mt-4 mb-3">Registro <small>de usuarios</small></h1>
        {%  dump form.vars %}
        <!-- Portfolio Item Row -->
        <div class="row">
            <div class="col-lg-6">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            <div class="col-lg-6">
                <h2>Instrucciones de registro</h2>
                Para registrate en la web has de proporcionar un email válido y una contraseña de al menos 8 caracteres.</p>
                Además has de especificar la asociación a la que perteneces.</p>
                Una vez aprobado el registro, te enviaremos un correo.</p>
            </div>
        </div>
        <!-- /.row -->
    </div>

{% endblock %}

