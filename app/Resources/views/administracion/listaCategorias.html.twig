{# Pagina Nueva Categoria #}
{% extends 'administracion/base_admin.html.twig' %}

{# TITULO #}
{% block title %}Administracion Lista Categorias{% endblock %}

{# TITULO BODY#}
{% block bodytitle %}Listado de Categorias{% endblock %}

{# CONTENT #}
{% block content %}
    {% if categorias is defined and categorias is not empty %}
        <div class="divTable">
            <div class="divTableHeading">
                <div class="divTableRow">
                    <div class="divTableHead">Nombre Categoría</div>
                    <div class="divTableHead">Descripción</div>
                    <div class="divTableHead center">Acción</div>
                </div>
            </div>
            <div class="divTableBody">
                {% for categoria in categorias %}
                    <div class="divTableRow">
                        <div class="divTableCell">{{ categoria.name }}</div>
                        <div class="divTableCell">{{ categoria.description | raw }}</div>
                        <div class="divTableCell center">
                            <button class="btn btn-primary"><a class="" href="{{ path('editCategoria', {'id':categoria.id}) }}">Edita</a></button>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <!-- DivTable.com -->
    {% endif %}
    <button class="btn btn-primary"><a class="" href="{{ path('nuevaCategoria') }}">Nueva Categoría</a></button>
    </div>
{% endblock %}



